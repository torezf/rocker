<aside class="w-16 hover:w-64 fixed top-16 left-0 h-[calc(100vh-4rem)] bg-white/80 backdrop-blur-md shadow-lg border-r border-white/20 p-2 hover:p-6 flex flex-col rounded-r-3xl overflow-y-auto transition-all duration-200 group">
  <h2 class="text-lg font-bold text-sky-700 mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap overflow-hidden">Menu</h2>
  <%= link_to new_admin_article_path, class: "bg-gradient-to-r from-red-500 via-pink-500 to-purple-500 hover:from-pink-500 hover:to-purple-500 mb-6 flex items-center gap-2 px-2 py-2 bg-sky-600 hover:bg-sky-700 text-white font-semibold rounded-lg shadow-sm hover:shadow transition-all duration-300", data: { testid: "create-article" } do %>
    <%= image_tag "image.png", class: "flex-shrink-0 ml-1 w-6 h-6" %>
    <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap overflow-hidden">Create Article</span>
  <% end %>
  <nav class="space-y-2 flex-1">
    <%= link_to admin_articles_path(status: "all"), class: "flex items-center gap-2 px-2 py-2 rounded-lg font-medium transition-colors duration-200 #{params[:status] == 'all' || params[:status].blank? ? 'bg-pink-700 text-white font-semibold glow' : 'text-[#424242] hover:bg-pink-900/30'}" do %>
      <span class="flex-shrink-0 w-6 ml-1 h-6 text-center text-xl">📄</span>
      <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap overflow-hidden">All</span>
    <% end %>
    <% @statuses.each do |status| %>
      <%= link_to admin_articles_path(status: status), class: "flex items-center gap-2 px-2 py-2 rounded-lg transition-colors duration-2000 font-medium transition-all duration-300 #{params[:status] == status ? 'bg-pink-700 text-white font-semibold glow' : 'text-[#424242] hover:bg-pink-900/30'}" do %>
        <span class="flex-shrink-0 ml-1 w-6 h-6 text-center text-xl">
          <%= status == 'draft' ? '📝' : status == 'waiting_for_review' ? '⏳' : '✅' %>
        </span>
        <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap overflow-hidden "><%= status.humanize %></span>
      <% end %>
    <% end %>
  </nav>
</aside>
