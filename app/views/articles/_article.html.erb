<div class="card w-full bg-base-100 shadow-md hover:shadow-xl transition">
  <!-- Cover Image -->
  <% if article.cover_image.attached? %>
    <figure>
      <%= image_tag article.cover_image, class: "w-full h-48 object-cover rounded-t-xl" %>
    </figure>
  <% else %>
    <figure class="bg-base-200 flex items-center justify-center h-48 rounded-t-xl">
      <span class="text-gray-400">No cover image</span>
    </figure>
  <% end %>

  <!-- Card Body -->
  <div class="card-body">
    <h2 class="card-title text-primary">
      <%= article.title %>
    </h2>

    <p class="line-clamp-3 text-gray-600">
      <%= article.description %>
    </p>

    <div class="card-actions justify-end mt-4">
      <%= link_to "Read More", 
                  article, 
                  class: "btn btn-sm btn-outline btn-primary" %>
    </div>
  </div>
</div>
