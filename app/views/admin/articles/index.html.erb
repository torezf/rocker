<% content_for :title, "Articles" %>
<div class="flex fixed min-h-screen bg-gray-50 mb-16">
  <%= render partial: "layouts/admin/sidebar" %>
  <main class="flex-1 ml-16  p-8 flex flex-col">
    <h1 class="text-3xl font-extrabold text-gray-800 mb-4 flex-shrink-0">
      Articles <%= "(#{params[:status]&.humanize || 'All'})" %>
    </h1>
    <% current_status = params[:status] %>
    <% filtered_articles = if current_status.blank? || current_status == "all"
                            @articles
                          else
                            @articles.select { |a| a.status == current_status }
                          end %>
    <div class="flex-1 overflow-y-auto max-h-[80vh] scrollbar-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 mb-10 lg:grid-cols-4 gap-6 ">
        <% filtered_articles.each do |article| %>
          <%= render partial: "article", locals: { article: article } %>
        <% end %>
      </div>
    </div>
  </main>
</div>


