<%= form_with(model: [:admin, article], class: "space-y-6") do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-error shadow-lg">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 19c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7z"/></svg>
        <span>
          <strong><%= pluralize(article.errors.count, "error") %></strong> prohibited this article from being saved:
          <ul class="list-disc list-inside ml-4">
            <% article.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </span>
      </div>
    </div>
  <% end %>
  <!-- Title -->
  <div class="form-control">
    <%= form.label :title, class: "label font-semibold" %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>
  <!-- Description -->
  <div class="form-control">
    <%= form.label :description, class: "label font-semibold" %>
    <%= form.text_area :description, rows: 5, class: "textarea textarea-bordered w-full" %>
  </div>
  <!-- Cover Image -->
  <div class="form-control">
    <%= form.label :cover_image, class: "label font-semibold" %>
    <%= form.file_field :cover_image, class: "file-input file-input-bordered w-full" %>
  </div>
  <!-- Submit -->
  <div class="form-control mt-6">
    <%= form.submit "Save Article", class: "btn btn-primary" %>
  </div>
<% end %>
