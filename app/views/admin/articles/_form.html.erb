<%= form_with(model: [:admin, article],
              html: { class: "space-y-6 bg-white border border-gray-200 rounded-2xl shadow-lg p-8 max-w-2xl mx-auto" }) do |form| %>
  <% if article.errors.any? %>
    <div class="p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, "Article Title", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= form.text_field :title,
        placeholder: "Enter the article title...",
        class: "block w-full rounded-xl border border-gray-300 bg-gray-50 text-gray-900 px-4 py-2 focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition" %>
  </div>
  <div>
    <%= form.label :description, "Description", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 5,
        placeholder: "Write a short description or content here...",
        class: "block w-full rounded-xl border border-gray-300 bg-gray-50 text-gray-900 px-4 py-2 focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition" %>
  </div>
  <div>
    <%= form.label :cover_image, "Cover Image", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= form.file_field :cover_image, 
        class: "file-input file-input-secondary block w-full text-gray-700 border border-gray-300 rounded-xl cursor-pointer bg-gray-50 focus:outline-none" %>
  </div>
  <div class="flex gap-4">
    <%= form.submit "Save as Draft", name: "commit_save_draft",
        class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-4 rounded-xl shadow-md transition transform hover:scale-105" %>
    <%= form.submit "Submit for Review", name: "commit_submit_review",
        class: "flex-1 bg-gradient-to-r from-pink-500 to-purple-600 hover:from-purple-500 hover:to-pink-600 text-white font-semibold py-3 px-4 rounded-xl shadow-md transition transform hover:scale-105" %>
  </div>
<% end %>
