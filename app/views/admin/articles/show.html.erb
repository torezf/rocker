<% if notice.present? %>
  <div class="alert alert-success shadow-lg mb-6">
    <span><%= notice %></span>
  </div>
<% end %>
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <%= render @articles %>
    <div class="card-actions justify-end mt-6">
      <%= link_to "✏️ Edit", 
                  edit_admin_article_path(@articles), 
                  class: "btn btn-outline btn-primary" %>
      <%= link_to "← Back", 
                  admin_articles_path, 
                  class: "btn btn-outline" %>
      <%= button_to "🗑️ Destroy", 
                    [:admin, @articles], 
                    method: :delete, 
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-error" %>
    </div>
  </div>
</div>
